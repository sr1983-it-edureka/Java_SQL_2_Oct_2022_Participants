
public class File {

	// C: D:
	char driveLetter;	
	
	String name;
	int noOfPages;
	
	File(){
		System.out.println("Constructor function called...");
	}	
	
	void display() {
		
		System.out.println("Name ->" + name);
		System.out.println("No of pages ->" + noOfPages);
		System.out.println("Drive Letter ->" + driveLetter);
		
		System.out.println();
	}
}
