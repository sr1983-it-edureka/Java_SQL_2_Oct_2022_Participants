<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Servlets-Cookies</display-name>
  <welcome-file-list>
    <welcome-file>username.html</welcome-file>
  </welcome-file-list>
  
  
  	<servlet>
  		<servlet-name>username-servlet</servlet-name>
  		<servlet-class>cookies.UsernameServlet</servlet-class>
  	</servlet>
  
	<servlet-mapping>
		<servlet-name>username-servlet</servlet-name>
		<url-pattern>/username-action</url-pattern>
	</servlet-mapping>  
	
	
  	<servlet>
  		<servlet-name>cookieinfo-servlet</servlet-name>
  		<servlet-class>cookies.CookieInfoServlet</servlet-class>
  	</servlet>
  
	<servlet-mapping>
		<servlet-name>cookieinfo-servlet</servlet-name>
		<url-pattern>/cookieinfo</url-pattern>
	</servlet-mapping>  	
</web-app>