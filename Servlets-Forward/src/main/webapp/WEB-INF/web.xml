<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Servlets-Forward</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>include-forward-servlet</servlet-name>
  	<servlet-class>com.edureka.javasql2.servlets.IncludeForwardServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>include-forward-servlet</servlet-name>
  	<url-pattern>/include-forward</url-pattern>
  </servlet-mapping>
  

  <servlet>
  	<servlet-name>products-manager-servlet</servlet-name>
  	<servlet-class>com.edureka.javasql2.servlets.ProductsManagerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>products-manager-servlet</servlet-name>
  	<url-pattern>/forwarded-products-manager</url-pattern>
  </servlet-mapping>
  
  
</web-app>